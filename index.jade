| ---
| layout: default
| ---

| <!--comment to separate the layout -->
.row
    .col-md-8
        | {% for post in paginator.posts %}
        .panel.panel-default
            .panel-heading
                h3.panel-title
                    a(href='{{ post.url }}') {{ post.title }}
            .panel-body
                author {{ post.author | site.author.name }}

                .content {{ post.content }}
            .panel-footer.clearfix
                | {% unless post.tags == empty %}
                ul.tag_box
                    li: i.fa.fa-tags.fa-fw
                    | {% assign tags_list = post.tags %}
                    | {% include MD/tags_list %}
                | {% endunless %}
                span.date.pull-right {{ post.date | date: '%F %R %p' }}
        | {% endfor %}
    .col-md-4
        | {% unless site.categories == empty %}
        ul.list-group
            | {% assign categories_list = site.categories %}
            | {% include MD/categories_list %}
        | {% endunless %}

nav
    ul.pagination
        | {% if paginator.previous_page %}
        li
            | {% if paginator.previous_page == 1 %}
            a(href='/')
                i.fa.fa-arrow-left
            | {% else %}
            a(href='{{ paginator.previous_page_path }}')
                i.fa.fa-arrow-left
            | {% endif %}
        | {% else %}
        li.disabled
            a: i.fa.fa-arrow-left
        | {% endif %}
        | {% if paginator.page == 1 %}
        li.active
            a 1
        | {% else %}
        li
            a(href='/') 1
        | {% endif %}

        | {% for count in (2..paginator.total_pages) %}
        | {% if count == paginator.page %}
        li.active
            a {{count}}
        | {% else %}
        li
            a(href='/page{{ count }}') {{ count }}
        | {% endif %}
        | {% endfor %}

        | {% if paginator.next_page %}
        li
            a(href='{{ paginator.next_page_path }}')
                i.fa.fa-arrow-right
        | {% else %}
        li.disabled
            a: i.fa.fa-arrow-right
        | {% endif %}
